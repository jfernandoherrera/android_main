<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_corners_bg"
    android:layout_margin="8dp"
    android:id="@+id/container"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/touched"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageLocation"
            android:src="@mipmap/ic_location"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textName"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/imageLocation"
            android:layout_toEndOf="@+id/imageLocation"
            style="@style/AppTheme.ListViewItem"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/touched">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageCalendar"
            android:src="@mipmap/ic_calendar"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/textDate"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/imageCalendar"
            android:layout_toEndOf="@+id/imageCalendar"
            style="@style/AppTheme.ListViewItem"/>
    </RelativeLayout>
</RelativeLayout>