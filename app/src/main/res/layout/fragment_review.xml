<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amtechventures.tucita.activities.venue.ReviewFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/imageVenue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="25sp"
        android:text="@string/ven_title"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageVenue"
        android:id="@+id/title_Venue"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.1"
        android:layout_below="@+id/title_Venue"
        android:id="@+id/ratingBar"
        android:layout_centerVertical="true"
        style="?android:attr/ratingBarStyleSmall" />

</RelativeLayout>
