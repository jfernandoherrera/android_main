<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.amtechventures.tucita.activities.main.fragments.subcategory.SubCategoryFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/image_serviceContainer"
    android:layout_height="160dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        android:id="@+id/image_service" />
<com.amtechventures.tucita.utils.views.AppTextView
    android:layout_width="match_parent"
    android:id="@+id/categoryName"
    android:textColor="@android:color/white"
    android:drawableRight="@drawable/arrow_down"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="18dp"
    app:bold="true"
    android:layout_marginLeft="18dp"
    android:layout_marginBottom="18dp"
    android:layout_marginRight="24dp"
    android:layout_marginEnd="24dp"
    android:layout_height="wrap_content" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/image_serviceContainer"
        android:layout_height="wrap_content">
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewServices"
        style="@style/AppTheme.subTitle"
   />
    </RelativeLayout>
</RelativeLayout>
