<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/scrollView1"
    android:layout_height="wrap_content">
    <com.amtechventures.tucita.utils.views.UserReviewView
        android:layout_width="match_parent"
        android:id="@+id/userReview"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_below="@+id/userReview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_top"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:id="@+id/venueView"
        >
    <com.amtechventures.tucita.utils.views.CircleTextView
        android:id="@+id/textRating"
        android:textSize="24sp"
        android:background="@drawable/rate05"
        android:layout_width="68dp"
        android:layout_height="68dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/textRating"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/textRating"
        android:layout_height="56dp">
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:numStars="5"
        android:layout_marginStart="@dimen/high_margin"
        android:layout_marginLeft="@dimen/high_margin"
        android:id="@+id/ratingBarVenue"
        android:isIndicator="true"
        style="@style/RatingBar"
        />
    <com.amtechventures.tucita.utils.views.AppTextView
        android:layout_marginLeft="@dimen/high_margin"
        android:layout_marginStart="@dimen/high_margin"
        android:layout_width="wrap_content"
        android:id="@+id/textReviews"
        app:bold="true"
        app:light="false"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/white"
        android:layout_below="@id/ratingBarVenue"
        android:layout_height="44dp"
        />
</RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
<android.support.v7.widget.RecyclerView
android:id="@+id/recycler_view"
android:layout_below="@+id/scrollView1"
android:layout_width="match_parent"
android:layout_height="400dp"
    />
</RelativeLayout>