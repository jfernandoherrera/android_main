<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:background="@android:color/white"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/imageVenue"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="25sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/imageVenue"
                    android:layout_marginStart="@dimen/high_margin"
                    android:layout_marginLeft="@dimen/high_margin"
                    android:id="@+id/title_Venue"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/clickRating"
                    android:layout_below="@+id/title_Venue"
                    android:layout_height="17sp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin">
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:numStars="5"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="@dimen/high_margin"
                    android:layout_marginLeft="@dimen/high_margin"
                    android:id="@+id/ratingBar"
                    android:isIndicator="true"
                    style="@style/RatingBar"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/textViewReviews"
                        android:layout_height="15sp"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/high_margin"
                        android:layout_marginRight="@dimen/high_margin"
                        android:background="@android:color/transparent" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/top_services"
                    android:id="@+id/textViewTop"
                    android:layout_below="@+id/clickRating"
                    android:layout_height="60dp"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/activity_horizontal_margin"
                    android:background="@drawable/border"
                    android:paddingStart="@dimen/high_margin"
                    android:paddingLeft="@dimen/high_margin"
                    android:paddingEnd="@dimen/high_margin"
                    android:paddingRight="@dimen/high_margin"
                    />
                <ExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewTop"
                    android:indicatorLeft="294dp"
                    android:indicatorRight="329dp"
                    android:id="@+id/listViewTop"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/full_menu"
                    android:layout_height="60dp"
                    android:layout_below="@+id/listViewTop"
                    android:id="@+id/textViewFull"
                    android:paddingStart="@dimen/high_margin"
                    android:paddingLeft="@dimen/high_margin"
                    android:paddingEnd="@dimen/high_margin"
                    android:paddingRight="@dimen/high_margin"
                    android:textSize="15sp"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/activity_horizontal_margin"
                    android:background="@drawable/border"
                    />
                <ExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indicatorLeft="294dp"
                    android:indicatorRight="329dp"
                    android:id="@+id/listViewFull"
                    android:layout_below="@+id/textViewFull"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/about"
                    android:layout_height="60dp"
                    android:layout_below="@+id/listViewFull"
                    android:id="@+id/textViewAbout"
                    android:textSize="15sp"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/activity_horizontal_margin"
                    android:background="@drawable/border"
                    android:paddingStart="@dimen/high_margin"
                    android:paddingLeft="@dimen/high_margin"
                    android:paddingEnd="@dimen/high_margin"
                    android:paddingRight="@dimen/high_margin"
                    />
                <ExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listViewDescription"
                    android:indicatorLeft="294dp"
                    android:indicatorRight="329dp"
                    android:layout_below="@+id/textViewAbout"
                    android:foregroundGravity="bottom"
                    android:divider="@android:color/holo_red_dark"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below = "@+id/listViewDescription"
                    android:id="@+id/watch_location"
                    android:background="@drawable/log_in_or_signup_click_out" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/opening_hours"
                    android:id="@+id/textViewOpeningHours"
                    android:layout_below="@+id/watch_location"
                    android:layout_height="60dp"
                    android:paddingStart="@dimen/high_margin"
                    android:paddingLeft="@dimen/high_margin"
                    android:paddingEnd="@dimen/high_margin"
                    android:paddingRight="@dimen/high_margin"
                    android:textSize="15sp"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/activity_horizontal_margin"
                    android:background="@drawable/border"
                    />
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton1"
                    android:layout_below="@+id/textViewOpeningHours"/>
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton2"
                    android:layout_below="@+id/radioButton1"
                    />
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton3"
                    android:layout_below="@+id/radioButton2"
                    />
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton4"
                    android:layout_below="@+id/radioButton3"
                    />
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton5"
                    android:layout_below="@+id/radioButton4"
                    />
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton6"
                    android:layout_below="@+id/radioButton5"
                    />
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton7"
                    android:layout_below="@+id/radioButton6"
                    />
            </RelativeLayout>

</ScrollView>

