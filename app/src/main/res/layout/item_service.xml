<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/expanded_children_color">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/plus_icon_small"
        android:layout_height="wrap_content"
        />
<TextView
    android:layout_width="match_parent"
    android:id="@+id/textName"
    android:layout_height="35dp"
    android:paddingStart="43dp"
    android:paddingLeft="43dp"
    android:paddingEnd="@dimen/double_high_margin"
    android:gravity="bottom"
    android:paddingRight="@dimen/double_high_margin"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textName">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:id="@+id/textDuration"
    android:paddingStart="43dp"
    android:paddingLeft="43dp"
    android:paddingEnd="@dimen/double_high_margin"
    android:paddingRight="@dimen/double_high_margin"
    android:gravity="center_vertical"
/>
<TextView
    android:layout_width="wrap_content"
    android:id="@+id/textPricesFrom"
    android:layout_height="48dp"
    android:paddingStart="43dp"
    android:paddingLeft="43dp"
    android:paddingEnd="@dimen/high_margin"
    android:gravity="center_vertical"
    android:paddingRight="@dimen/high_margin"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    />
    </RelativeLayout>
</RelativeLayout>