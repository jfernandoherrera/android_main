<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp"
    android:stateListAnimator="@anim/lift_on_touch"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/imageSearchVenue"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textName"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/imageSearchVenue"
            style="@style/AppTheme.Title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLocation"
            android:layout_below="@+id/textName"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/clickRating"
            android:layout_below="@id/textLocation"
            android:layout_height="30sp">
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="15sp"
                android:numStars="5"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:id="@+id/searchRatingBar"
                style="@style/RatingBar"
                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textViewReviews"
                android:layout_height="30sp"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@android:color/transparent" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textReview"
            android:gravity="center"
            android:layout_below="@+id/clickRating"
            android:text="@string/make_review"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:numStars="5"
            android:layout_below="@id/textReview"
            android:id="@+id/ratingBar"
            android:translationX="15dp"
            android:isIndicator="false"
            android:foregroundGravity="center"
            android:layout_marginTop="@dimen/high_margin"
            android:layout_marginBottom="@dimen/high_margin"
            style="@style/RatingBarSelector"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>