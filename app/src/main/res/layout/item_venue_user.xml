<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    card_view:cardCornerRadius="4dp"
    android:stateListAnimator="@anim/lift_on_touch"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/imageSearchVenue"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            />
<RelativeLayout
    android:layout_width="wrap_content"
    android:id="@+id/withReview"
    android:layout_below="@+id/imageSearchVenue"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="@drawable/bg_top"
            android:id="@+id/withoutReview"
            android:layout_height="90dp">
        <com.amtechventures.tucita.utils.views.AppTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textName"
            card_view:bold="true"
            android:textSize="19sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            style="@style/AppTheme.Title"
            />
        <com.amtechventures.tucita.utils.views.AppTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLocation"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/textName"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/clickRating"
            android:paddingBottom="4dp"
            android:layout_below="@id/textLocation"
            android:layout_height="36dp">
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:numStars="5"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:id="@+id/searchRatingBar"
                style="@style/RatingBar"
                />
            <com.amtechventures.tucita.utils.views.AppTextView
                android:layout_width="wrap_content"
                android:id="@+id/textViewReviews"
                android:layout_height="17dp"
                card_view:bold="true"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@android:color/transparent" />
        </RelativeLayout> </RelativeLayout>
<com.amtechventures.tucita.utils.views.AppTextView
    android:layout_width="200dp"
    android:layout_height="45dp"
    android:drawablePadding="10dp"
    android:text="@string/make_review"
    android:layout_below="@+id/withoutReview"
    android:drawableLeft="@drawable/starfull_icon"
    android:gravity="center_vertical"
    android:textColor="@android:color/white"
    android:padding="10dp"
    card_view:bold="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_button_review"
    android:id="@+id/ratingButton"/>
    </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>