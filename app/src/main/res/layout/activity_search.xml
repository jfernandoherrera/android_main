<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.amtechventures.tucita.activities.search.SearchActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="25sp"
        android:id="@+id/textViewTreatments"
        android:background="@color/com_facebook_button_login_silver_background_color"
        android:layout_alignParentLeft="true"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewTreatments"
        android:layout_below="@+id/textViewTreatments"/>
    <View
        android:id="@+id/separator5"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/listViewTreatments"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewVenues"
        android:layout_below="@+id/separator5"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/textViewVenues"/>
</RelativeLayout>
