<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amtechventures.tucita.activities.account.AccountActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >
        <com.amtechventures.tucita.utils.views.AppToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:theme="@style/AppTheme.Base"
            android:background="@color/colorAccent"
            android:paddingBottom="@dimen/high_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/backgroundContainer"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_height="79dp">
            <com.mikhaellopez.circularimageview.CircularImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginLeft="@dimen/high_margin"
                android:layout_marginStart="@dimen/high_margin"
                android:layout_marginTop="10dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:id="@+id/imageUser"
                android:layout_gravity="top|center_horizontal"
                android:padding="5dp"
                app:border_width="3dp"
                android:src="@drawable/user_icon"
                app:shadow="true"
                app:shadow_radius="1"
                app:border_color="@color/colorAccent"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.amtechventures.tucita.utils.views.AppTextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="bottom"
                    android:id="@+id/textName"
                    app:bold="true"
                    android:textSize="24sp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    />
                <com.amtechventures.tucita.utils.views.AppTextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/textName"
                    android:gravity="center"
                    android:id="@+id/accountMemberFrom"
                    android:textSize="14sp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingStart="@dimen/activity_horizontal_margin"
                    /></RelativeLayout>
        </LinearLayout>
        <com.amtechventures.tucita.utils.common.AppTabLayout
            android:id="@+id/tabs"
            android:layout_width="wrap_content"
            app:tabTextColor="@color/titleBackground"
            app:tabSelectedTextColor="@color/colorAccent3"
            app:tabBackground="@drawable/tab_bg"
            app:tabIndicatorColor="@color/colorAccent3"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabIndicatorHeight="2dp"
            android:layout_gravity="center"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_below="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</RelativeLayout>
