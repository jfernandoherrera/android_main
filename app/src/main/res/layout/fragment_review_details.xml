<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.mikhaellopez.circularimageview.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="@dimen/high_margin"
            android:layout_marginStart="@dimen/high_margin"
            android:layout_marginTop="@dimen/high_margin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:id="@+id/imageUser"
            android:layout_gravity="top|center_horizontal"
            android:padding="5dp"
            app:border_width="0dp"
            android:src="@mipmap/ic_user"
            app:shadow="true"
            app:shadow_radius="1"
            app:civ_border_color="@android:color/transparent"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:id="@+id/touched"
           >
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textNameUser"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                style="@style/AppTheme.subTitle"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/ratingContainer"
                android:layout_below="@id/textNameUser"
                android:layout_height="17sp">
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="15sp"
                    android:numStars="5"
                    android:id="@+id/ratingBar"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:isIndicator="true"
                    style="@style/RatingBar"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/ratingBar"
                    android:layout_toEndOf="@id/ratingBar"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="24dp"
                    android:layout_height="15sp"
                    android:id="@+id/textDate"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/textTitle"
                android:layout_below="@+id/ratingContainer"
                android:gravity="top"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/high_margin"
                android:layout_marginRight="@dimen/high_margin"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/textTitle"
                android:layout_marginEnd="@dimen/high_margin"
                android:layout_marginRight="@dimen/high_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:id="@+id/textDescription"
                style="@style/AppTheme.ListViewItem"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>