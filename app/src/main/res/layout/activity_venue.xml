<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageVenue"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="25sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/imageVenue"
                    android:id="@+id/title_Venue"/>
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:layout_below="@+id/title_Venue"
                    android:id="@+id/ratingBar"
                    android:layout_centerVertical="true"
                    style="?android:attr/ratingBarStyleSmall" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/top_services"
                    android:id="@+id/textViewTop"
                    android:layout_below="@+id/ratingBar"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:background="@color/com_facebook_button_login_silver_background_color"
                    />
                <ExpandableListView
                    style="@style/AppTheme.ListView"
                    android:layout_below="@+id/textViewTop"
                    android:id="@+id/listViewTop"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/full_menu"
                    android:layout_height="35dp"
                    android:textSize="25sp"
                    android:layout_below="@+id/listViewTop"
                    android:id="@+id/textViewFull"
                    android:background="@color/com_facebook_button_login_silver_background_color"
                    />
                <ExpandableListView
                    android:id="@+id/listViewFull"
                    android:layout_below="@+id/textViewFull"
                    style="@style/AppTheme.ListView"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/about"
                    android:layout_height="35dp"
                    android:layout_below="@+id/listViewFull"
                    android:id="@+id/textViewAbout"
                    android:textSize="25sp"
                    android:background="@color/com_facebook_button_login_silver_background_color"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDescription"
                    android:layout_below="@+id/textViewAbout"/>
                <View
                    android:layout_width = "wrap_content"
                    android:layout_height = "1dp"
                    android:layout_marginTop = "7dp"
                    android:id="@+id/separator3"
                    android:layout_below = "@+id/textViewDescription"
                    android:background = "@android:color/darker_gray" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below = "@+id/separator3"
                    android:id="@+id/watch_location"
                    android:background="#ffffff" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/opening_hours"
                    android:id="@+id/textViewOpeningHours"
                    android:layout_below="@+id/watch_location"
                    android:layout_height="35dp"
                    android:textSize="25sp"
                    android:background="@color/com_facebook_button_login_silver_background_color"
                    />
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton1"
                    android:layout_below="@+id/textViewOpeningHours"/>
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton2"
                    android:layout_below="@+id/radioButton1"
                    />
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton3"
                    android:layout_below="@+id/radioButton2"
                    />
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton4"
                    android:layout_below="@+id/radioButton3"
                    />
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton5"
                    android:layout_below="@+id/radioButton4"
                    />
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton6"
                    android:layout_below="@+id/radioButton5"
                    />
                <com.amtechventures.tucita.utils.views.OpeningHourView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/state_drawable_size"
                    android:id="@+id/radioButton7"
                    android:layout_below="@+id/radioButton6"
                    />
            </RelativeLayout>
</ScrollView>

