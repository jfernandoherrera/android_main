<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/container"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <com.mikhaellopez.circularimageview.CircularImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="@dimen/high_margin"
        android:layout_marginStart="@dimen/high_margin"
        android:layout_marginTop="@dimen/high_margin"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="30dp"
        android:id="@+id/imageUser"
        android:layout_gravity="top|center_horizontal"
        android:padding="5dp"
        app:border_width="0dp"
        android:src="@mipmap/ic_user"
        app:shadow="true"
        app:shadow_radius="1"
        app:civ_border_color="@android:color/transparent"
        />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="9"
        android:layout_height="wrap_content"
        android:id="@+id/touched"
        android:background="@drawable/ab_transparent_light_holo">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/containerC"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/textNameUser"
                    android:gravity="center_vertical"
                    style="@style/AppTheme.ListViewItem"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/edit"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:text="@string/edit"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/ratingContainer"
                    android:layout_below="@id/textNameUser"
                    android:layout_height="30sp">

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:translationX="-33sp"
                        android:translationY="-3sp"
                        android:id="@+id/ratingBar"
                        android:isIndicator="true"
                        style="@style/RatingBar"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="30sp"
                        android:id="@+id/textDate"/>
                </RelativeLayout>
            </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/textTitle"
            android:layout_below="@+id/containerC"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/high_margin"
            android:layout_marginRight="@dimen/high_margin"
            style="@style/AppTheme.ListViewItem"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/textTitle"
            android:layout_marginEnd="@dimen/high_margin"
            android:layout_marginRight="@dimen/high_margin"
            android:id="@+id/textDescription"
            style="@style/AppTheme.ListViewItem"/>

    </RelativeLayout>
</LinearLayout>