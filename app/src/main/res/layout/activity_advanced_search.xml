<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content">
    <com.amtechventures.tucita.utils.views.AppToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorAccent"
        app:navigationBack="true"
        />
    <RelativeLayout
        android:layout_below="@+id/inputCities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myDrawView1"/>
    <com.amtechventures.tucita.utils.views.AppTextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/inputCities"
        android:layout_marginTop="6dp"
        android:elevation="8dp"
        android:layout_marginLeft="17dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="17dp"
        android:layout_marginRight="@dimen/high_margin"
        android:layout_marginEnd="@dimen/high_margin"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">
    <com.amtechventures.tucita.utils.views.AppEditText
        android:layout_width="match_parent"
        android:id="@+id/searchCities"
        android:drawableLeft="@drawable/pin_line"
        android:maxLines="1"
        android:singleLine="true"
        android:drawablePadding="10dp"
        android:hint="@string/near"
        android:layout_height="50dp"
        />
    </com.amtechventures.tucita.utils.views.AppTextInputLayout>
    <com.amtechventures.tucita.utils.views.AppTextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/inputCities"
        android:textSize="25sp"
        android:visibility="gone"
        android:text="@string/cities"
        android:textColor="@android:color/white"
        android:layout_marginLeft="@dimen/high_margin"
        android:layout_marginStart="@dimen/high_margin"
        android:layout_marginRight="@dimen/high_margin"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:elevation="8dp"
        android:layout_marginEnd="@dimen/high_margin"
        android:id="@+id/textViewCities"
        android:background="@color/colorPrimary"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/high_margin"
        android:layout_marginStart="@dimen/high_margin"
        android:layout_marginRight="@dimen/high_margin"
        android:layout_marginEnd="@dimen/high_margin"
        android:elevation="8dp"
        android:id="@+id/listViewCities"
        android:layout_below="@+id/textViewCities"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/listViewCities"
        android:visibility="gone"
        android:id="@+id/alert"
        android:elevation="8dp"
        android:layout_marginTop="@dimen/high_margin"
        android:layout_marginLeft="@dimen/high_margin"
        android:layout_marginStart="@dimen/high_margin"
        android:layout_marginRight="@dimen/high_margin"
        android:layout_marginEnd="@dimen/high_margin"
        android:background="@color/white"
        android:layout_height="100dp">

        <com.amtechventures.tucita.utils.views.AppTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginTop="@dimen/high_margin"
            android:layout_marginLeft="@dimen/high_margin"
            android:layout_marginStart="@dimen/high_margin"
            android:layout_marginRight="@dimen/high_margin"
            android:layout_marginEnd="@dimen/high_margin"
            android:drawableLeft="@drawable/warning_icon"
            android:text="@string/typing_help"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/high_margin"
            android:layout_marginStart="@dimen/high_margin"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="116dp"
            android:layout_marginEnd="116dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"/>
        <com.amtechventures.tucita.utils.views.AppButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="@dimen/high_margin"
            android:layout_marginEnd="@dimen/high_margin"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:onClick="continueTyping"
            android:layout_alignParentRight="true"
            android:text="@string/continue_option"/>
    </RelativeLayout>
</RelativeLayout>