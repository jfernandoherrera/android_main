<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"
        android:paddingBottom="@dimen/high_margin"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textName"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/high_margin"
        android:layout_marginStart="@dimen/high_margin"
        android:layout_height="50dp"
        style="@style/AppTheme.Title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/high_margin"
        android:layout_marginStart="@dimen/high_margin"
        android:id="@+id/textLocation"
        android:layout_below="@+id/textName"
        style="@style/AppTheme.text"/>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:layout_below="@+id/textName"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/high_margin"
            android:paddingStart="@dimen/high_margin"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/touched"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:background="@drawable/ab_transparent_light_holo">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/textVenueRating"
                android:gravity="bottom"
                style="@style/AppTheme.ListViewItem"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/textDuration"
                    style="@style/AppTheme.ListViewItem"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/textPricesFrom"
                    style="@style/AppTheme.ListViewItem"
                    android:paddingEnd="@dimen/high_margin"
                    android:paddingRight="@dimen/high_margin"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</RelativeLayout>